<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/styles/header")
    @Scripts.Render("~/bundles/scripts/header")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hello World Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts/footer")
    @RenderSection("scripts", required: false)
</body>
</html>
